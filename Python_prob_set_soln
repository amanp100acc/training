for i in l:
    if i % 2 != 0:
        l1.append(i)
    else:
        print("No odd numbers present")
        exit()
print(l1)
l1.sort()
print(l1)
print(l1[-1])

Q5.
num = int(input("Enter the number: "))
for root in range(10000000000000000000):
    for pwr in range(1,6):
        if num == root ** pwr:
            print(root,pwr)
            exit()
print("No such pair exists")

