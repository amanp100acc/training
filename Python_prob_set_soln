Q6.

def findanEven(l):
    try:
        c = 0
        for i in l:
            if i % 2 == 0:
                c = 1
                return i
        if c == 1:
            pass
        else:
            raise ValueError()
    except:
        return "No even numbers in the list"
    
print(findanEven([1,5,3,7]))

Q7.
def isPalindrome(s):
    if s.lower().replace(" ", "") == s[::-1].lower().replace(" ", ""):
        print("True")
    else:
        print("False")
isPalindrome("Ma lay ala m")

Q8.
def eval_loop(l):
    x = input("Enter the expression: ")
    if x == 'Done':
        print(l[-1])
    else:
        y = eval(x)
        print(y)
        l.append(y)
        eval_loop(l)
l = []
eval_loop(l)
