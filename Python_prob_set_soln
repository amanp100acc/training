    sum += float(i)
print(sum)

Q7.
s = 'Hindustan'
s1 = 'hindu'
def isIn(s,s1):
    if (s.lower() in s1.lower() or s1.lower() in s.lower()):
        return True
    else:
        return False
print(isIn(s,s1))

Q8.
def getratios(vect1, vect2):
    l = []
    for i in range(len(vect1)):
        l.append(vect1[i]/vect2[i])
    return l   
vect1 = [20,30,40,50]
vect2 = [2,10,20,5]
print(getratios(vect1,vect2))
