Q3,Q4.
def has_no_e(l):
    c = 0
    for i in l:
        if 'e' not in i.lower():
            print(i)
            c += 1
        else:
            c += 0
    x = c * 100 / len(l)
    return x
print(has_no_e(['araam', 'de', 'kahan', 'hai', 'BETA', 'Ego']))

Q5.
def avoids(w, s):
    c = 0
    for i in s:
        if i.lower() not in w.lower():
            pass
        else:
            c += 1
    if c == 0:
        return True
    else:
        return False
        
print(avoids('Mahatma', 'bcd'))

Q6.
def avoids(l, s):
    c = 0
    for j in l: 
        for i in s:
            if i.lower() not in j.lower():
                pass
            else:
                c += 1
    if c == 0:
        return True
    else:
        return False
        
l = ['harsh', 'aman', 'Aashish', 'Akash']
s = input("Enter the string of forbidden letters: ")
print(avoids(l,s))

Q7.
def using_only(w, s):
    c = 0
    for i in w.replace(' ', ''):
        if i.lower() in s.lower():
            pass
        else:
            c += 1
    if c == 0:
        return True
    else:
        return False

print(using_only("Hoe alfalfa", 'acefhlo'))

