Problem Set 2
----------------------------------------------
Q1.
def gcd(a,b):
    if b == 0:
        return a
    else:
        r = a % b
        a = b
        b = r
        return gcd(a,b)
        
print(gcd(184,8))

Q2.
def is_Power(a,b):
    if a == b:
        return True
    if b == 0 or b == 1:
        return False
    return ((a%b == 0) and is_Power(a / b, b))
print(is_Power(16,8))

Q3.
#Recursion
def fact(n):
    if n == 0 or n == 1:
        return 1
    else:
        return n*fact(n -1)
print(fact(5))
#without recursion
def fact(n):
    if n == 0 or n == 1:
        return 1
    else:
        n1 = n
        for i in range(1, n):
            nth = n1 * (n - i)
            n1 = nth
        return n1
print(fact(6))

Q4.
x = 10011
s = str(x)
s1 = s[::-1]
sum = 0
for i in range(len(s1)):
    if s1[i] == '1':
        sum += 2 ** i
    else:
        sum += 0
print(sum)
